#!/bin/sh
#
# csub -n np exe args

subname=csub
which_script=/share/cs-instructional/cs5220/local/etc/csubscript
source /share/cs-instructional/cs5220/local/etc/subbasement.sh

cat <<EOF > $SUBFILE
# HTCondor script generated by $subname
universe = vanilla
executable = $which_script
getenv = true
arguments = "$hast $@"
notification = never

EOF

write_reqs

for job in `seq 1 $NP` ; do
let jobid=job-1
cat <<EOF >> $SUBFILE

output = $BASENAME-o.$jobid
error  = $BASENAME-e.$jobid
log    = $BASENAME-l.$jobid
queue
EOF
done

condor_submit $SUBFILE
